<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <ImageView
    android:id="@+id/iv_nexmon"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center"
    android:paddingTop="70dp"
    android:paddingLeft="10dp"
android:paddingRight="10dp"
android:src="@drawable/nexmon_logo_color"/>

    <TextView
        android:text="Welcome!\n\nThe Nexmon app needs super user rights to access your WLAN interface, your radio chip firmware as well as for installation of custom tools if you want so.\nAdditionally, we need permission to read and write to your storage."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_nexmon"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/tv_root"
        android:textAlignment="center" />

    <Button
        android:text="Grant Root, Permission &amp; Check Installation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/tv_root"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_root" />
    <TextView
        android:text="Welcome!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_root"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/tv_nexmon_info"
        android:textAlignment="center" />

    </RelativeLayout>
    </ScrollView>


</RelativeLayout>
