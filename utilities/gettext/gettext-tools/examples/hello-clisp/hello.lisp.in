(setf (i18n:textdomain) "hello-clisp")
(setf (i18n:textdomaindir "hello-clisp") "@localedir@/")
(defmacro _ (string) `(i18n:gettext ,string))

(write-line (_ "Hello, world!"))

(format t (_ "This program is running as process number ~D.")
          (system::program-id))
(terpri)
